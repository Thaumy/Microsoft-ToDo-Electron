{
  "name": "microsoft-todo-electron",
  "version": "1.3.0",
  "description": "Microsoft To Do Client in Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Thaumy/Microsoft-ToDo-Electron",
  "keywords": [
    "Electron",
    "ToDo",
    "Microsoft ToDo",
    "Thaumy"
  ],
  "author": "Thaumy <thaumy@outlook.com>",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "Microsoft-ToDo-Electron",
    "extraResources": [
      {
        "from": "./cfg_default/appStatus.json",
        "to": "../cfg_default"
      },
      {
        "from": "./cfg_default/appConfig.json",
        "to": "../cfg_default"
      },
      {
        "from": "./cfg_default/theme.css",
        "to": "../cfg_default"
      },
      {
        "from": "./cfg_default/glob.css",
        "to": "../cfg_default"
      }
    ],
    "linux": {
      "target": [
        "tar.gz"
      ]
    }
  }
}
